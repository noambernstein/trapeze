<mujoco model='flyer'>
    <compiler inertiafromgeom='true' angle='degree'/>

    <default>
        <joint limited='true' damping='0' armature='0' />
        <geom contype='1' conaffinity='1' condim='1' rgba='0.8 0.6 .4 1'
        	margin="0.001" solref=".02 1" solimp=".8 .8 .01" material="geom"/>
        <motor ctrlrange='-.4 .4' ctrllimited='true'/>
    </default>

    <option timestep='0.002' iterations="50" solver="PGS">
        <flag energy="enable"/>
    </option>

    <visual>
        <map fogstart="3" fogend="5" force="0.1"/>
        <quality shadowsize="2048"/>
    </visual>

    <asset>
        <texture type="skybox" builtin="gradient" width="100" height="100" rgb1=".4 .6 .8" 
            rgb2="0 0 0"/>  
        <texture name="texgeom" type="cube" builtin="flat" mark="cross" width="127" height="1278" 
            rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" markrgb="1 1 1" random="0.01"/>  
        <texture name="texplane" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 0.15 0.2" 
            width="100" height="100"/>  

        <material name='MatPlane' reflectance='0.5' texture="texplane" texrepeat="1 1" texuniform="true"/>
        <material name='geom' texture="texgeom" texuniform="true"/>
    </asset>

    <worldbody>
        <body name='torso' pos='0 0 1.3'>
            <geom name='torso' type='box' size='0.1 0.2 0.3'/>
            <geom name='head' type='sphere' pos='0 0 0.45' size='0.125' />
            <body name='l_thigh' pos='0 0.1 -0.3'>
                <geom name='l_thigh' type='capsule' fromto='0 0 -0.1    0 0 -0.4' size='0.1' />
                <joint name='l_hip_x' type='hinge' pos='0 0 0' axis='1 0 0' range='-25 75'   damping='0' stiffness='.0' armature='0.01' />
                <joint name='l_hip_y' type='hinge' pos='0 0 0' axis='0 -1 0' range='-20 110' damping='0' stiffness='.0' armature='0.0080' />
                <!-- <joint name='l_hip_z' type='hinge' pos='0 0 0' axis='0 0 1' range='-60 35'  damping='0' stiffness='.0' armature='0.01' /> -->
                <body name='l_lower_leg' pos='0 0.0 -0.5'>
                    <geom name='l_lower_leg' type='capsule' fromto='0 0 -0.08 0 0 -0.42' size='0.08' />
                    <joint name='l_knee' type='hinge' pos='0 0 0' axis='0 1 0' range='0 160'   damping='0' stiffness='.0' armature='0.01' />
                </body>
            </body>
            <body name='r_thigh' pos='0 -0.1 -0.3'>
                <geom name='r_thigh' type='capsule' fromto='0 0 -0.1 0 0 -0.4' size='0.1' />
                <joint name='r_hip_x' type='hinge' pos='0 0 0' axis='-1 0 0' range='-25 75'   damping='0' stiffness='.0' armature='0.01' />
                <joint name='r_hip_y' type='hinge' pos='0 0 0' axis='0 -1 0' range='-20 110' damping='0' stiffness='.0' armature='0.0080' />
                <!-- <joint name='r_hip_z' type='hinge' pos='0 0 0' axis='0 0 -1' range='-60 35'  damping='0' stiffness='.0' armature='0.01' /> -->
                <body name='r_lower_leg' pos='0 0.0 -0.5'>
                    <geom name='r_lower_leg' type='capsule' fromto='0 0 -0.08 0 0 -0.42' size='0.08' />
                    <joint name='r_knee' type='hinge' pos='0 0 0' axis='0 1 0' range='0 160'   damping='0' stiffness='.0' armature='0.01' />
                </body>
            </body>
            <body name='l_upper_arm' pos='0.0 0.25 0.25'>
                <geom name='l_upper_arm' type='capsule' fromto='0.05 0 0 0.325 0 0' size='0.05' />
                <joint name='l_shoulder1' type='hinge' pos='0 0 0' axis='0 -1 0'  range='-130 95' stiffness='0' armature='0.0068' />
                <joint name='l_shoulder2' type='hinge' pos='0 0 0' axis='0 0 1' range='-65 95' stiffness='0'  armature='0.0051' />
                <body name='l_lower_arm' pos='0.375 0.0 0.0'>
                    <geom name='l_lower_arm' type='capsule' fromto='0.04 0 0 0.335 0 0' size='0.04' />
                    <joint name='l_elbow' type='hinge' pos='0 0 0' axis='0 -1 0'  range='0 160' stiffness='0' armature='0.0068' />
                </body>
            </body>
            <body name='r_upper_arm' pos='0.0 -0.25 0.25'>
                <geom name='r_upper_arm' type='capsule' fromto='0.05 0 0 0.325 0 0' size='0.05' />
                <joint name='r_shoulder1' type='hinge' pos='0 0 0' axis='0 -1 0' range='-130 95' stiffness='0' armature='0.0068' />
                <joint name='r_shoulder2' type='hinge' pos='0 0 0' axis='0  0 -1' range='-65 95' stiffness='0'  armature='0.0051' />
                <body name='r_lower_arm' pos='0.375 0.0 0.0'>
                    <geom name='r_lower_arm' type='capsule' fromto='0.04 0 0 0.335 0 0' size='0.04' />
                    <joint name='r_elbow' type='hinge' pos='0 0 0' axis='0 -1 0'  range='0 160' stiffness='0' armature='0.0068' />
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <motor name='l_thigh_x'       gear='200' joint='l_thigh_x' />
        <motor name='l_thigh_y'       gear='200' joint='l_thigh_y' />
        <motor name='l_thigh_z'       gear='200' joint='l_thigh_z' />
        <motor name='r_thigh_x'       gear='200' joint='r_thigh_x' />
        <motor name='r_thigh_y'       gear='200' joint='r_thigh_y' />
        <motor name='r_thigh_z'       gear='200' joint='r_thigh_z' />
        <motor name='l_knee'          gear='200' joint='l_knee' />
        <motor name='r_knee'          gear='200' joint='r_knee' />
    </actuator>

</mujoco>
